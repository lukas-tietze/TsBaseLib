{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "declaration": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "target": "ES2021",
    "lib": [
      "ES2021",
      "DOM"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
