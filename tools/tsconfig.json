{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "target": "ESNext",
    "outDir": "./dist/es",
    "lib": [
      "ESNext",
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
