{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "target": "ES2021",
    "lib": [
      "ES2021",
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
